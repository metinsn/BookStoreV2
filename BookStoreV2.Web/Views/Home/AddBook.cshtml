
@{
    ViewBag.Title = "Kitap Ekle";
}

<form method="post">
    <div class="form-group">
        <label>Kitap Adı</label>
        <input type="text" class="form-control" required name="BookName">
    </div>
    <div class="form-group">
        <label>Kitap Resim (Url)</label>
        <input type="url" class="form-control" required name="PhotoUrl">
    </div>
    <div class="form-group">
        <label>Kitap Ücreti</label>
        <input type="number" step="any" class="form-control" required name="Price">
    </div>
    <div class="form-group">
        <label>Yazar Adı</label>
        <input type="text" class="form-control" required name="WriterName">
    </div>
    <div class="form-group">
        <label>Kategori Adı</label>
        <input type="text" class="form-control" required name="CategoryName">
    </div>
    <button type="submit" class="btn btn-default">Kaydet</button>
</form>

